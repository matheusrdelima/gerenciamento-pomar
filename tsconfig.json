{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                     
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "strict": true,                           
    "strictPropertyInitialization": true,  
    "baseUrl": "./src",                       
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "forceConsistentCasingInFileNames": true  
  }
}
